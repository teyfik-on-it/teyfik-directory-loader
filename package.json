{
  "name": "teyfik-directory-loader",
  "version": "0.0.2",
  "description": "A simple and customizable package for loading serialized files under a directory keeping the structure.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "nodemon -x \"ts-node src/index.ts\" -e ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "json",
    "yaml",
    "loader"
  ],
  "author": "Halil Teyfik Dolmaci (hlltvfk@gmail.com)",
  "license": "ISC",
  "homepage": "https://github.com/teyfik-on-it/teyfik-directory-loader#readme",
  "repository": "github:teyfik-on-it/teyfik-directory-loader",
  "dependencies": {
    "fast-glob": "^3.3.0",
    "flat": "^5.0.2",
    "lint-staged": "^13.2.3",
    "lodash": "^4.17.21",
    "yaml": "^2.3.1"
  },
  "devDependencies": {
    "@types/flat": "^5.0.2",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
